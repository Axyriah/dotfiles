#!/bin/bash

PID="$2"

update() {
    kill -s USR1 $PID
}

on() {
    xrdb -merge "$HOME/.Xresources"
    xrdb -merge "$HOME/.cache/wal/colors.Xresources"
    update
}

off() {
    xrdb -merge "$HOME/.config/nvim/base.Xresources"
    update
}

if [ -z "$1" ]; then
    echo "Usage: $0 [on|off] <pid>"
fi

$1 

